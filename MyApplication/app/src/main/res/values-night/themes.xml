<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app1</item>
        <item name="colorPrimaryVariant">@color/app1</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="ScreenBackground">
        <item name="android:background">@color/black</item>
    </style>

    <style name="cardBackground">
        <item name="android:background">@color/app1</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/acceuil</item>
    </style>

    <style name="ImageChange">
        <item name="android:src">@drawable/samrt1</item>
    </style>
</resources>